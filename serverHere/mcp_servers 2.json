{
  "mcp_servers": {
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time",
        "--local-timezone=Asia/Shanghai"
      ]
    },
    "ddg-search": {
      "command": "uvx",
      "args": ["duckduckgo-mcp-server"]
    },
    "shell": {
      "command": "npx",
      "args": ["-y", "@executeautomation/mcp-shell-server"]
    }
  }
}